{
    "name": "wheel-of-misfortune",
    "version": "2.1.3",
    "description": "An app to randomly select a given choice",
    "main": "index.js",
    "scripts": {
        "start": "electron .",
        "test": "echo \"Error: no test specified\" && exit 1",
        "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/logo.ico --prune=true --out=release-builds",
        "package-win": "electron-packager . --overwrite --platform=win32 --arch=ia32 --icon=assets/logo.ico --prune=true --out=release-builds --version-string.CompanyName=SD --version-string.FileDescription=SD --version-string.ProductName=\"The Wheel of Misfortune\"",
        "package-linux": "electron-packager . --overwrite --platform=linux --arch=x64 --icon=assets/logo.svg --prune=true --out=release-builds"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SteeveDroz/wheel-of-misfortune.git"
    },
    "author": "Steeve Droz",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/SteeveDroz/wheel-of-misfortune/issues"
    },
    "homepage": "https://github.com/SteeveDroz/wheel-of-misfortune#readme",
    "dev": {
        "jquery": "^3.2.1"
    },
    "devDependencies": {
        "electron": "^2.0.8",
        "electron-packager": "^12.1.1"
    },
    "dependencies": {
        "i18n": "^0.8.3"
    }
}
